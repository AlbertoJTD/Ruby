<%= form_with(model: @article, local: true) do |form| %>
    
    <br>
    <div class="field">
        <%=form.label :title%> 
        <%=form.text_field :title%> 
    </div>

    <div class="field mb-3 mt-3">
        <%=form.label :category_elements %> 
        <div class="row">
            <% @categories.each do |category| %>
                <label class="col-6 col-sm-5">
                    <%= form.check_box :category_elements, {multiple: true}, category.id, nil %>
                    <%= category.title %>
                </label>
            <% end %>
        </div>
    </div>
    
    <div class="field mb-3">
        <%=form.label :content%> 
        <%=form.rich_text_area :content%> 
    </div>
    

    <div>
        <%=form.submit%>
    </div>
    
<%end%>